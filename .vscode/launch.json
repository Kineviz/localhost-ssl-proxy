    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch http 9000",
            "program": "${workspaceFolder}/bin/localhost-ssl-proxy",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                 " -s=false ",
                 " --port=9000 "
            ],
            "type": "pwa-node"
        },
        {
            "name": "Launch https 9000",
            "program": "${workspaceFolder}/bin/localhost-ssl-proxy",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                 " -s true ",
                 " -p 9000 "
            ],
            "type": "pwa-node"
        },
    ]
}